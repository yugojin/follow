<div class="container">
  <div class="row">
    <div class="col text-center">
     <%= form_with url: search_path, method: :get, local: true do |form| %>
       <%= form.text_field :search %>
       <%= select_tag(:option, options_for_select([["user", "1"],["book","2"]]))%>
       <%= select_tag(:choice, options_for_select([["完全一致", "1" ],["前方一致", "2" ],["後方一致", "3" ],["部分一致", "4" ]])) %>
       <%= form.submit '検索' %>
     <% end %>
    </div>
   </div>
</div>
<% if @user_or_book == "1"%>
    <h2>Users search for　'<% search_url %>' </h2>
    <table class='table'>
     <thead>
       <tr>
         <th>image</th>
         <th>name</th>
         <th colspan="3"></th>
       </tr>
     </thead>
    <table>
        <% users.each do |user| %>
        <tbody>
            <tr>
                <th><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></th>
                <th><%= user.name %> </th>
            </tr>
        </tbody>
        <% end %>
    </table>

<% else @user_or_book == "2" %>
    <h2>Books search for '<% search_url %>'</h2>
     <table class='table table-hover table-inverse'>
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
     </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
        </td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>